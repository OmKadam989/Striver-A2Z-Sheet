name: C++ CI

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up C++
        run: sudo apt-get install g++

      - name: Compile All Files
        run: |
          for file in $(find . -name "*.cpp"); do
            echo "Compiling $file..."
            g++ -std=c++17 -o output "$file" && echo "âœ… $file compiled";
          done
